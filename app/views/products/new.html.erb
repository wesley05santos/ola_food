<%= form_with model: Product do |form| %>
  <p>
    <%= form.label :code, 'Código:' %>
    <%= form.text_field :code %>
  </p>

  <p>
    <%= form.label :name, 'Nome:' %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :price, 'Preço:' %>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.submit 'Salvar' %>  
  </p>    
<% end %>